<%= post_form.hidden_field :social_media_publishable_id, value: social_media_publishable_id %>
<%= post_form.hidden_field :social_media_publishable_type, value: social_media_publishable_type %>
<div>
  <div class="row no-padding">
    <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
        <%= post_form.fields_for post_form.object.images.build do |image_form| %>
          <div data-hook="file">
            <%= image_form.label :attachment, Spree.t(:image) %>
            <%= image_form.file_field :attachment %>
          </div>
          <br><span> Upto <%= Spree::PostImage::MAXIMUM_IMAGE_SIZE %>MB </span>
        <% end %>
      </div>
      <div class="col-md-8">
        <div data-hook="message"=>
          <%= post_form.label :post_message, 'Message' %> <span class="required">*</span>
          <%= post_form.text_area :post_message, class: "form-control #{ 'character-limited' if limit_message_characters }", rows: 4, data: { character_limit: Spree::TwitterAccount::MAXIMUM_TWEET_LENGTH, remove_dynamic_code: false } %>
          <% if limit_message_characters %>
            <div class="remaining_character_block text-right">
              <span id='remaining_character_span'></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>

</div>
<div class="text-right">
  <%= button Spree.t(:submit_new_post), 'ok', 'submit', { class: 'btn-success', data: { disable_with: 'Submitting...' } } %>
</div>







